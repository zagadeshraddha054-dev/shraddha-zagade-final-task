# test_remove_special_characters_typical.py

def remove_special_characters(s):
    if not isinstance(s, str):
        raise ValueError("Input must be a string")
    result = ""
    for ch in s:
        if ch.isalnum():
            result += ch
    return result

# Test: Typical usage
print(remove_special_characters("hello123!!!"))  # Expected: "hello123"
