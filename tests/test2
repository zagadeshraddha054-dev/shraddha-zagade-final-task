# test_remove_extra_space_typical.py

def remove_extra_space(s):
    if not isinstance(s, str):
        raise ValueError("Input must be a string")
    result = ""
    for ch in s:
        if ch != " ":
            result += ch
    return result

# Test: Typical usage
print(remove_extra_space("hello world"))  # Expected: "helloworld"
