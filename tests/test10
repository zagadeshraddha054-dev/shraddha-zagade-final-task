# test_remove_special_characters_error.py

def remove_special_characters(s):
    if not isinstance(s, str):
        raise ValueError("Input must be a string")
    result = ""
    for ch in s:
        if ch.isalnum():
            result += ch
    return result

# Test: Error handling
try:
    remove_special_characters(456)
except ValueError as e:
    print("Error:", e)  # Expected: ValueError
